{
  "name": "beeflang",
  "displayName": "Beef Lang",
  "description": "Adds support for the Beef programming language.",
  "version": "0.1.1",
  "publisher": "MineGame159",
  "repository": "github:MineGame159/Beef",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:bf",
    "onCommand:beeflang.workspaceSettings",
    "onCommand:beeflang.projectSettings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "bf",
        "aliases": [
          "Beef",
          "bf"
        ],
        "extensions": [
          ".bf"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "images/icon.png",
          "light": "images/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "bf",
        "scopeName": "source.bf",
        "path": "./syntaxes/beef-old.tmLanguage"
      }
    ],
    "commands": [
      {
        "command": "beeflang.changeConfiguration",
        "title": "Change Configuration",
        "category": "Beef"
      },
      {
        "command": "beeflang.workspaceSettings",
        "title": "Open Workspace Settings",
        "category": "Beef",
        "icon": "$(gear)"
      },
      {
        "command": "beeflang.projectSettings",
        "title": "Open Project Settings",
        "category": "Beef",
        "icon": "$(gear)"
      },
      {
        "command": "beeflang.restart",
        "title": "Restart LSP",
        "category": "Beef"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceFilename == BeefSpace.toml",
          "command": "beeflang.workspaceSettings",
          "group": "navigation"
        },
        {
          "when": "resourceFilename == BeefProj.toml",
          "command": "beeflang.projectSettings",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Beef Lang",
      "properties": {
        "beeflang.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "When the LSP server is running in Release mode it by default doesn't log debug messages, you can change this behaviour with this setting."
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "beef-build",
        "when": "customExecutionSupported",
        "properties": {
          "clean": {
            "type": "boolean",
            "description": "Does a clean build."
          }
        }
      },
      {
        "type": "beef-run",
        "when": "customExecutionSupported",
        "properties": {
          "project": {
            "type": "string",
            "description": "Which project to run."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node build.mjs -p",
    "compile": "node build.mjs",
    "watch": "node build.mjs -w"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/node": "14.x",
    "@types/vscode": "^1.71.0",
    "@yelo/rollup-node-external": "^1.0.1",
    "chokidar": "^3.5.3",
    "esbuild": "^0.15.7",
    "esbuild-svelte": "^0.7.1",
    "js-yaml": "^4.1.0",
    "parcel-plugin-svelte": "^4.0.9",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.8.3",
    "vscode-languageclient": "^8.0.2"
  }
}
